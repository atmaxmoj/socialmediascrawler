{
  "manifest_version": 3,
  "name": "Social Media Posts Scraper",
  "version": "1.0.0",
  "description": "Scrape posts from company social media pages",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://linkedin.com/*",
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://www.tiktok.com/*",
    "https://tiktok.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Posts Scraper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://linkedin.com/*",
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "https://www.tiktok.com/*",
        "https://tiktok.com/*"
      ],
      "js": [
        "db.js", 
        "crawlers/base-crawler.js",
        "crawlers/twitter-crawler.js",
        "crawlers/linkedin-crawler.js", 
        "crawlers/facebook-crawler.js",
        "crawlers/reddit-crawler.js",
        "crawlers/tiktok-crawler.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["db.js", "control-panel.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}